// Centralized sensor value storage
// All values stored in standard units (kPa, Â°C, %)

#include "types/EValueId.cnx"

struct TSensorValue {
    f32 value;
    bool hasHardware;
}

scope SensorValues {
    public TSensorValue[EValueId.VALUE_ID_COUNT] current;

    public void initialize() {
        for (u8 i <- 0; i < EValueId.VALUE_ID_COUNT; i <- i + 1) {
            this.current[i].value <- 0.0;
            this.current[i].hasHardware <- false;
        }
    }
}
